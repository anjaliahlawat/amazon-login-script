{
  "name": "gauge-js-template",
  "description": "Starter template for writing JavaScript tests for Gauge",
  "scripts": {
    "test": "./node_modules/.bin/gauge run -p specs/",
    "postinstall": "husky install",
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn commitlint --edit $1"
    }
  },
  "dependencies": {
    "@getgauge/cli": "^1.1.7",
    "dotenv": "^8.2.0",
    "puppeteer": "^8.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.0.1",
    "husky": "^5.2.0"
  }
}
